@model DealSphere.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-chart-line me-2"></i> Admin Dashboard</h1>

    <!-- Stat Cards in One Row -->
    <div class="row g-3 row-cols-2 row-cols-md-6 mb-4">
        <div class="col">
            <div class="card text-white bg-primary shadow-sm text-center small p-2">
                <div class="card-body">
                    <i class="fas fa-users fa-lg mb-2"></i>
                    <div>Total Users</div>
                    <div class="fw-bold fs-5">@Model.TotalUsers</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card text-white bg-dark shadow-sm text-center small p-2">
                <div class="card-body">
                    <i class="fas fa-user-shield fa-lg mb-2"></i>
                    <div>Total Admins</div>
                    <div class="fw-bold fs-5">@Model.TotalAdmins</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card text-white bg-success shadow-sm text-center small p-2">
                <div class="card-body">
                    <i class="fas fa-tags fa-lg mb-2"></i>
                    <div>Total Deals</div>
                    <div class="fw-bold fs-5">@Model.TotalDeals</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card text-white bg-info shadow-sm text-center small p-2">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-lg mb-2"></i>
                    <div>Published</div>
                    <div class="fw-bold fs-5">@Model.PublishedDeals</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card text-dark bg-warning shadow-sm text-center small p-2">
                <div class="card-body">
                    <i class="fas fa-ban fa-lg mb-2"></i>
                    <div>Unpublished</div>
                    <div class="fw-bold fs-5">@Model.UnPublishedDeals</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manage Users & Deals -->
    <div class="row g-3 mb-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-users-cog me-2 text-primary"></i> Manage Users
                    </h5>
                    <p class="card-text">View and manage all users, update roles, and more.</p>
                    <div class="mt-auto">
                        <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-outline-primary">
                            Go to User Management <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-bullhorn me-2 text-success"></i> Manage Deals
                    </h5>
                    <p class="card-text">Review, edit, and publish or unpublish deals.</p>
                    <div class="mt-auto">
                        <a asp-controller="Admin" asp-action="ManageDeals" class="btn btn-outline-success">
                            Go to Deal Management <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Recent Deals -->
    <h3 class="mb-3"><i class="fas fa-clock me-2"></i>Recent Deals</h3>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var deal in Model.RecentDeals)
                {
                    <tr>
                        <td>@deal.Title</td>
                        <td>₹@deal.DiscountPrice</td>
                        <td>@deal.CreatedAt.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
